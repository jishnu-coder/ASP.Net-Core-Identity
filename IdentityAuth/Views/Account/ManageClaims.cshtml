@model UserClaimsView

@{
    ViewData["Title"] = "Users Claim";
   
}
<form asp-route-roleId=@Model.UserId method="Post">
    <div class="card">
        <div class="card-header">
            Add Or Remove Claims from @ViewBag.UserName
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="@Model.UserId" />
            @for (int i = 0; i < @Model.userClaims.Count; i++)
            {

                <input type="hidden" asp-for="@Model.userClaims[i].ClaimType "  />
                <div class="form-check">
                    <input asp-for=@Model.userClaims[i].IsSelected class="form-check-input" />
                    <label class="form-check-label" asp-for=@Model.userClaims[i].IsSelected>
                        @Model.userClaims[i].ClaimType
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a class="btn btn-primary" asp-action="EditUser" asp-controller="Account" asp-route-id=@Model.UserId>Cancel</a>
        </div>
    </div>
</form>


